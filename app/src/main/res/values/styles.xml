<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Design.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/colorPrimary
        </item><!-- 何も入力してないとき入力フォーム内のHintの色 --><!-- 通常時EditTextの下線 -->
        <item name="colorControlActivated">@color/colorPrimary</item><!-- フォーカス時の下線の色 -->
    </style>

    <style name="AppTheme.Design.TextAppearance.Design.Hint" parent="TextAppearance.AppCompat.Caption"><!-- 上の方のhintの表示サイズ -->
        <item name="android:textColor">@color/colorPrimary</item><!--  上の方のhintの表示の色 -->
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/background_card</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Primary">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="Button.Primary.TextWide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Button.Primary.RectImage">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:radius">@dimen/element_spacing_very_small</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

</resources>
